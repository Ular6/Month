<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.month_4.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.month_4.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.example.month_4.ui.new_task.NewTaskFragment"
        android:label="New Task"
        tools:layout="@layout/fragment_new_task" />

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.month_4.ui.onBoarding.OnBoardFragment"
        android:label="OnBoard"
        tools:layout="@layout/fragment_on_board" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.month_4.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.month_4.ui.auth.AuthFragment"
        android:label="Authentication"
        tools:layout="@layout/fragment_auth" />


</navigation>